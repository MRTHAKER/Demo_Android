<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".saving_multimedia.saving.SavingFileActivity">
<LinearLayout
    android:id="@+id/save_linear_layout"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/green" />
    <com.google.android.material.button.MaterialButton
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/save"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_share"
        app:layout_constraintTop_toBottomOf="@id/save_linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/save_amp_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>